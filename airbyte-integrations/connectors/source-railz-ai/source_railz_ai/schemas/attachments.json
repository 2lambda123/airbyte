  "properties": {
    "id": {
      "type": "string"
    },
    "businessName": {
      "type": "string"
    },
    "serviceName": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "fileName": {
      "type": ["null", "string"]
    },
    "contentType": {
      "type": ["null", "string"]
    },
    "uploadDate": {
      "type": ["null", "number"]
    },
    "fileSize": {
      "type": ["null", "number"]
    },
    "link": {
      "type": ["null", "object"],
      "properties": {
