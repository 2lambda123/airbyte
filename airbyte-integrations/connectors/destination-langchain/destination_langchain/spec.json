{
  "documentationUrl": "https://docs.airbyte.com/integrations/destinations/langchain",
  "supported_destination_sync_modes": [
    "overwrite", "append"
  ],
  "supportsIncremental": true,
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Destination Langchain",
    "type": "object",
    "required": [],
    "additionalProperties": false,
    "properties": {
      "processing": {
        "type": "object",
        "title": "Processing",
        "description": "Configure how to pre-process the data (chunking and embedding)",
        "oneOf": [
          {
            "type": "object",
            "title": "OpenAI",
            "required": [
              "mode",
              "chunk_size",
              "openai_key"
            ],
            "properties": {
              "mode": {
                "const": "openai"
              },
              "chunk_size": {
                "type": "integer",
                "title": "Chunk size",
                "description": "Size of chunks to store in vector store (make sure it is not too big for the context if your LLM)"
              },
              "openai_key": {
                "type": "string",
                "airbyte_secret": true,
                "title": "OpenAI API key"
              }
            }
          },
          {
            "type":"object",
            "title": "HuggingFace",
            "properties": {
              "mode": {
                "const": "HuggingFace"
              }
            }
          },
          {
            "type":"object",
            "title": "Cohere",
            "properties": {
              "mode": {
                "const": "Cohere"
              }
            }
          },
          {
            "type":"object",
            "title": "Jina",
            "properties": {
              "mode": {
                "const": "Jina"
              }
            }
          },
          {
            "type":"object",
            "title": "Sagemaker",
            "properties": {
              "mode": {
                "const": "Sagemaker"
              }
            }
          },
          {
            "type":"object",
            "title": "Google PaLM",
            "properties": {
              "mode": {
                "const": "palm"
              }
            }
          }
        ]
      },
      "storing": {
        "type": "object",
        "title": "Storing",
        "description": "Configure how to store the embeddings",
        "oneOf": [
          {
            "type": "object",
            "title": "Weaviate",
            "required": [
              "mode",
              "index_name",
              "weaviate_key",
              "weaviate_url"
            ],
            "properties": {
              "mode": {
                "const": "weaviate"
              },
              "index_name": {
                "type": "string",
                "title": "Weaviate Index name"
              },
              "weaviate_key": {
                "type": "string",
                "airbyte_secret": true,
                "title": "Weaviate API key"
              },
              "weaviate_url": {
                "type": "string",
                "title": "Weaviate URL"
              }
            }
          },

          {
            "type":"object",
            "title": "PineconeDB",
            "properties": {
              "mode": {
                "const": "pinecone"
              }
            }
          },
          {
            "type":"object",
            "title": "Deep Lake",
            "properties": {
              "mode": {
                "const": "deeplake"
              }
            }
          },
          {
            "type":"object",
            "title": "Milvus",
            "properties": {
              "mode": {
                "const": "milvus"
              }
            }
          },
          {
            "type":"object",
            "title": "Qdrant",
            "properties": {
              "mode": {
                "const": "qdrant"
              }
            }
          },
          {
            "type":"object",
            "title": "Supabase VectorStore",
            "properties": {
              "mode": {
                "const": "supabase"
              }
            }
          },
          {
            "type":"object",
            "title": "Tair",
            "properties": {
              "mode": {
                "const": "tair"
              }
            }
          }
        ]
      }
    }
  }
}
